		"@versini/ui-form": "workspace:../ui-form",
		"@versini/ui-icons": "workspace:../ui-icons",
		"@versini/ui-plugins": "workspace:../ui-plugins",
		"@versini/ui-system": "workspace:../ui-system",
		"clsx": "2.1.0",
		"react": "18.2.0",
		"react-dom": "18.2.0",
		"tailwindcss": "3.4.1"
	}
