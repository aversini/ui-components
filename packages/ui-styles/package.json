{
	"name": "@versini/ui-styles",
	"version": "1.6.1",
	"license": "MIT",
	"author": "Arno Versini",
	"publishConfig": {
		"access": "public"
	},
	"homepage": "https://github.com/aversini/ui-components",
	"repository": {
		"type": "git",
		"url": "git@github.com:aversini/ui-components.git"
	},
	"type": "module",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"build:check": "tsc",
		"build:js": "vite build",
		"build:types": "tsup",
		"build": "npm-run-all --serial clean build:check build:js build:types",
		"clean": "rimraf dist",
		"dev:js": "vite build --watch --mode development",
		"dev:types": "tsup --watch src",
		"dev": "npm-run-all clean --parallel dev:js dev:types",
		"lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0 --fix --color",
		"test:coverage": "vitest run --coverage",
		"test:watch": "vitest",
		"test": "cross-env-shell NODE_ENV=test vitest run"
	},
	"dependencies": {
		"@tailwindcss/typography": "0.5.12",
		"culori": "4.0.1",
		"tailwindcss": "3.4.3"
	}
}
