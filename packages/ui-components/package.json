{
	"name": "@versini/ui-components",
	"version": "4.11.2",
	"license": "MIT",
	"author": "Arno Versini",
	"publishConfig": {
		"access": "public"
	},
	"type": "module",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"build:check": "tsc",
		"build:icons": "node lib/buildIcons.js",
		"build:js": "vite build",
		"build:types": "tsup",
		"build": "npm-run-all --serial clean build:check build:js build:types",
		"clean": "rimraf dist",
		"dev:js": "vite build --watch --mode development",
		"dev:types": "tsup --watch src",
		"dev": "npm-run-all clean --parallel dev:js dev:types",
		"lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0 --fix --color",
		"start": "static-server dist --port 5173",
		"test:coverage:ui": "vitest --coverage --ui",
		"test:coverage": "vitest run --coverage",
		"test:watch": "vitest",
		"test": "vitest run"
	},
	"peerDependencies": {
		"react": "^18.2.0",
		"react-dom": "^18.2.0"
	},
	"devDependencies": {
		"@floating-ui/react": "0.26.3",
		"culori": "3.3.0",
		"react": "18.2.0",
		"react-dom": "18.2.0",
		"tailwindcss": "3.3.6"
	},
	"dependencies": {
		"@floating-ui/react": "0.26.3",
		"clsx": "2.0.0",
		"nanoid": "5.0.4",
		"tailwindcss": "3.3.6",
		"uuid": "9.0.1"
	},
	"sideEffects": [
		"**/*.css"
	]
}
